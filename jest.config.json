{
  "testEnvironment": "node",
  "collectCoverage": true,

  "collectCoverageFrom": [
    "src/**/*.{js,jsx,ts,tsx}",
    "!**/node_modules/**",
    "!**/*.d.ts"
  ],
  "coverageProvider": "v8",

  "coverageThreshold": {
    "global": {
      "branches": 1,
      "functions": 1,
      "lines": 1,
      "statements": 1
    }
  }
}
